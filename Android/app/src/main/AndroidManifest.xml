<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dogaozkaraca.bitpops">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.dogaozkaraca.bitpops.FluxMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dogaozkaraca.bitpops.Settings.RssSettings"
            android:label="My News Sources" />
        <activity
            android:name="com.dogaozkaraca.bitpops.Viewers.PostReaderActivity"
            android:label="@string/title_activity_post_reader"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dogaozkaraca.bitpops.Settings.InstagramLogin"
            android:label="@string/logintoinstagram"
            android:theme="@style/Theme.AppCompat"></activity>
        <activity
            android:name="com.dogaozkaraca.bitpops.Settings.TwitterLogin"
            android:label="@string/logintotwitter"
            android:theme="@style/Theme.AppCompat"></activity>
        <activity
            android:name="com.dogaozkaraca.bitpops.Utils.WebBrowse"
            android:label="@string/logintotwitter"
            android:launchMode="singleTask"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat"></activity>
        <activity
            android:name="com.dogaozkaraca.bitpops.FluxSettings"
            android:label="@string/flux_settings"></activity>
        <activity android:name="com.dogaozkaraca.bitpops.FluxFirstUse"
            android:label="Flux" />
    </application>

</manifest>