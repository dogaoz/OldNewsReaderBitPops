<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#FFF"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:gravity="left|center"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/add_button_rss"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_button_rss"
        android:layout_toStartOf="@+id/add_button_rss" />
    <Button
        android:id="@+id/add_button_rss"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="5dp"

        android:background="@drawable/ic_delete_forever_black_48dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_button_rss"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="#EFEFEF" />

</RelativeLayout>
