<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF">

    <ImageView
        android:id="@+id/faviconImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:gravity="left|center"
        android:textSize="17sp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/add_button_rss"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_button_rss"
        android:layout_toRightOf="@+id/faviconImage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Follow"
        android:id="@+id/add_button_rss"
        android:layout_marginRight="5dp"

        android:textColor="@color/colorPrimaryDark"
        android:background="#00FFFFFF"
        android:gravity="center|center"
        android:layout_alignBottom="@+id/faviconImage"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_button_rss"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="#EFEFEF" />


</RelativeLayout>
